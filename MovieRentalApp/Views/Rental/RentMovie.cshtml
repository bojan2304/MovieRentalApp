@model RentalViewModel
<div class="row">

    <form asp-controller="Rental" asp-action="RentMovie" method="post" class="col-md-8">
        <h3 class="col-md-12 my-5">Rent a movie</h3>
        @Html.HiddenFor(m => Model.Movie.Id)
        <div class="form-group">
            <label asp-for="Movie.Borrower" class="col-md-2 control-label"></label>
            <div class="col-md-6">

                @Html.DropDownListFor(m => m.Movie.BorrowerId,
                                             new SelectList(Model.Customers.Select(x => new { Value = x.Id, Text = x.Name }), "Value", "Text"),
                                             "Select Customer",
                                             htmlAttributes: new { @class = "form-control border-input" })
            </div>
        </div>
        <div class="form-group">
            <div class="btn-group col-md-6 mt-3">
                <input class="btn btn-primary col-md-3 mr-3" type="submit" value="Return" asp-controller="Rental" asp-action="Index" />
                <input class="btn btn-success col-md-3" type="submit" value="Rent" />
            </div>
        </div>
    </form>
</div>