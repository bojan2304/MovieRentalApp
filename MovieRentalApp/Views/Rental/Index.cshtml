@model IEnumerable<Movie>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Directors name</th>
            <th>Rent a movie</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Movie movie in Model)
        {
            <tr>
                <td>@movie.Id</td>
                <td>@movie.Title</td>
                <td>@movie.Director.Name</td>
                <td><a class="btn btn-success" asp-controller="Rental" asp-action="RentMovie" asp-route-bookId="@movie.Id">Rent</a></td>
            </tr>
        }
    </tbody>
</table>