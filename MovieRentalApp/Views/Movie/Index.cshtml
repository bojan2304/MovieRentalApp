@model IEnumerable<Movie>

<a class="btn btn-success mt-5" asp-controller="Movie" asp-action="Create">Create new movie</a>

<table class="table table-striped table-hover my-5 table-borderless">
    <thead>
        <tr>
            <th>Img</th>
            <th>ID</th>
            <th>Title</th>
            <th>Year</th>
            <th>Directors name</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Movie movie in Model)
        {
        <tr>
            <td><img src="@movie.ImageUrl" alt="Movie picture" style="width: 50px; height:50px;"></td>
            <td>@movie.Id</td>
            <td>@movie.Title</td>
            <td>@movie.ReleaseDate</td>
            <td>@movie.Director.Name</td>
            <td>
                <a class="btn btn-info" asp-controller="Movie" asp-action="Update" asp-route-id="@movie.Id">Edit</a>
                <a class="btn btn-danger" asp-controller="Movie" asp-action="Delete" asp-route-id="@movie.Id" asp-route-authorId="@ViewBag.AuthorId">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>