@model IEnumerable<Movie>

<a class="btn btn-success mt-5" style="margin: 10px" asp-controller="Movie" asp-action="Create">Create new movie</a>

<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Directors name</th>
            <th>Edit movie</th>
            <th>Delete movie</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Movie movie in Model)
        {
            <tr>
                <td>@movie.Id</td>
                <td>@movie.Title</td>
                <td>@movie.Director.Name</td>
                <td><a class="btn btn-info" asp-controller="Movie" asp-action="Update" asp-route-id="@movie.Id">Edit</a></td>
                <td><a class="btn btn-danger" asp-controller="Movie" asp-action="Delete" asp-route-id="@movie.Id" asp-route-authorId="@ViewBag.AuthorId">Delete</a></td>
            </tr>
        }
    </tbody>
</table>