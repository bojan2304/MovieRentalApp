@model Director

<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <p>@Model.Name</p>
        </div>
        <div class="panel-body">
            <h2>Movie count: @Model.Movies?.Count</h2>
            <div class="btn-group">
                @if (Model.Movies?.Count == 0)
                {
                    <a class="btn btn-default" asp-area="">View movie list</a>
                }
                else
                {
                    <a class="btn btn-info" asp-controller="Movie" asp-action="Index" asp-route-authorId="@Model.Id">View movie list</a>
                }
                <a class="btn btn-info" asp-controller="Director" asp-action="Update" asp-route-id="@Model.Id">Edit</a>
                <a class="btn btn-danger" asp-controller="Director" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
            </div>
        </div>
    </div>
</div>