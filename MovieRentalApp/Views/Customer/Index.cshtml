@model IEnumerable<CustomerViewModel>

<a class="btn btn-success my-5" asp-controller="Customer" asp-action="Create">Create new customer</a>

<table class="table table-striped table-hover table-borderless">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Rented movie count</th>
            <th>Address</th>
            <th>Phone #</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customerVM in Model)
        {
        <tr>
            <td>@customerVM.Customer.Id</td>
            <td>@customerVM.Customer.Name</td>
            <td>@customerVM.MovieCount</td>
            <td>@customerVM.Customer.Address</td>
            <td>@customerVM.Customer.PhoneNumber</td>
            <td>
                <a class="btn btn-info" asp-controller="Customer" asp-action="Update" asp-route-id="@customerVM.Customer.Id">Edit</a>
                <a class="btn btn-danger" asp-controller="Customer" asp-action="Delete" asp-route-id="@customerVM.Customer.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>