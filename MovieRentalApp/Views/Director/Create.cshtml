@model CreateDirectorViewModel

<div class="row">
    <form asp-controller="Director" asp-action="Create" method="post" class="col-md-8">
        @Html.HiddenFor(x => x.Referer)
        <h3 class="col-md-12 my-5">Create new Director</h3>
        <div class="form-group">
            <label asp-for="Director.Name" class="col-md-2 control-label"></label>
            <div class="col-md-6">
                <input asp-for="Director.Name" class="form-control" placeholder="Enter Director name" />
                <span asp-validation-for="Director.Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="btn-group col-md-6 mt-3">
                <input class="btn btn-primary col-md-3 mr-3" type="submit" value="Return" asp-controller="Director" asp-action="Index" />
                <input class="btn btn-success col-md-3" type="submit" value="Create" />
            </div>
        </div>
    </form>
</div>